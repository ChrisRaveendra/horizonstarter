<p>
    <font size="10" color="red"> Server is encountering issues, please try again </font>
</p>
{{/if}}

<form method='POST' action="/new" id="newProj">
    <span>
        {{#if data}}
            <input type='text' name="title" value="{{data.title}}" placeholder="Title">
            <input type='text' name="goal" value="{{data.goal}}" placeholder="Funding goal">
            <br>
            <textarea rows="4" cols="50" placeholder="Describe your project" name="description" form="newProj">{{data.description}}</textarea>
            <br>
            <input type='date' name="start" value="{{data.start}}"> Start date
            <br>
            <input type='date' name="end" value="{{data.end}}"> End date

            <br>
            <input type="submit" name="" value="submit">

        {{else}} 
            <input type='text' name="title" value="" placeholder="Title">
            <input type='text' name="goal" value="" placeholder="Goal">
            <br>
            <textarea rows="4" cols="50" placeholder="Describe your project" name="description" form="newProj"></textarea>
            <br>
            <input type='date' name="start" value=""> Start date
            <br>
            <input type='date' name="end" value=""> End date
            <br>
            <br>
            <label for="category">Project Category</label>
            <br>
            <select name="category">
                <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
                <option value="Current Black Presidents">Current Black Presidents</option>
                <option value="The Pen Is Mightier">The Pen Is Mightier</option>
                <option value="Famous Mothers">Famous Mothers</option>
                <option value="Drummers Named Ringo">Drummers Named Ringo</option>
                <option value="1-Letter Words">1-Letter Words</option>
                <option value='Months That Start With "Feb"'>Months That Start With "Feb"</option>
                <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
                <option value="Potent Potables">Potent Potables</option>

            </select>
            <br>
            <br>
            <input type="submit" name="" value="Create your Project">
        {{/if}}
    </span>
</form>
